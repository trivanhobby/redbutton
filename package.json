{
  "name": "redbutton",
  "version": "1.0.0",
  "description": "A minimalist assistant application to help users react to their inner states",
  "main": "build/electron/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && tsc -p electron/tsconfig.json",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && tsc -p electron/tsconfig.json && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "generate-icon": "npx svgexport public/assets/menubar-icon.svg public/menubar-icon.png 2x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trivanhobby/redbutton.git"
  },
  "keywords": [
    "electron",
    "react",
    "productivity",
    "mental-health",
    "assistant"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/trivanhobby/redbutton/issues"
  },
  "homepage": "./calendar",
  "dependencies": {
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "chart.js": "^4.4.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.4",
    "openai": "^4.12.1",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.16.0",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^20.8.4",
    "@types/react": "^18.2.27",
    "@types/react-dom": "^18.2.12",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-is-dev": "^2.0.0",
    "postcss": "^8.4.31",
    "react-scripts": "^5.0.1",
    "svgexport": "^0.4.2",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.redbutton.app",
    "productName": "RedButton",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
